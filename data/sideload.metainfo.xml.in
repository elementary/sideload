  <translation type="gettext">io.elementary.sideload</translation>

  <name>Sideload</name>
  <summary>Install apps downloaded from the Internet</summary>
  <description>
    <p>Sideload Flatpak apps per user and automatically add their remotes to AppCenter. Sideload shows important information about apps before you install like their download size.</p>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/sideload/6.2.1/data/screenshot.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/sideload/6.2.1/data/screenshot-progress.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/sideload/6.2.1/data/screenshot-success.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary">#f9c440</color>
  </branding>

  <content_rating type="oars-1.1" />

  <provides>
    <binary>io.elementary.sideload</binary>
  </provides>

  <recommends>
    <display_length compare="ge">508</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

